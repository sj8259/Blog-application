<%- include('partials/header') %>

<div class="container">
  <h1>My Blog</h1>
  
  <a href="/compose" class="compose-btn">+ New Post</a>
  
  <div class="posts-container">
    <% if (posts.length === 0) { %>
      <p class="no-posts">No posts yet. Create your first post!</p>
    <% } else { %>
      <% posts.forEach(function(post) { %>
        <div class="post-card">
          <h2><%= post.title %></h2>
          <p class="date"><%= post.date %></p>
          <p class="content-preview">
            <%= post.content.substring(0, 100) %><%= post.content.length > 100 ? "..." : "" %>
          </p>
          <div class="post-actions">
            <a href="/posts/<%= post.id %>" class="btn read-more">Read More</a>
            <a href="/posts/edit/<%= post.id %>" class="btn edit">Edit</a>
            <form action="/posts/delete/<%= post.id %>" method="POST" class="delete-form">
              <button type="submit" class="btn delete">Delete</button>
            </form>
          </div>
        </div>
      <% }); %>
    <% } %>
  </div>
</div>

<%- include('partials/footer') %>
