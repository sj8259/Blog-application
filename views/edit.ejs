<%- include('partials/header') %>

<div class="container">
  <h1>Edit Post</h1>
  
  <form action="/posts/edit/<%= post.id %>" method="POST" class="post-form">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" id="title" name="title" value="<%= post.title %>" required class="form-control">
    </div>
    
    <div class="form-group">
      <label for="content">Content</label>
      <textarea id="content" name="content" rows="10" required class="form-control"><%= post.content %></textarea>
    </div>
    
    <button type="submit" class="btn submit-btn">Update</button>
    <a href="/" class="btn cancel-btn">Cancel</a>
  </form>
</div>

<%- include('partials/footer') %>
